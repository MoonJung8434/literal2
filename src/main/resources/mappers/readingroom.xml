    </delete>
	
	
	<select id="getNextReservationCodeNumber" parameterType="string" resultType="int">
    SELECT IFNULL(MAX(CAST(SUBSTRING(reservation_code, LENGTH(#{prefix}) + 1) AS UNSIGNED)), 0) + 1
    FROM reservation
    WHERE reservation_code LIKE CONCAT(#{prefix}, '%')
</select>
	

    
    
    
